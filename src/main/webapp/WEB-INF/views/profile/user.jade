extends ../site

block title
  title #{account.username} on Tripography

block content
  include ../vehicles/charts
  .row
    .span12.well
      .profile-sidebar
        h4.username= account.username
        each vehicle in vehicles
          p= vehicle.makeAndModel

  .row
    .span12.well
      h4.text-center Vehicle Statistics
      +tabbed_charts("account/" + account.id)
