extends settings

block settings
  form.form-horizontal
    .control-group
      label.control-label(for="inputUsername") Username
      .controls
        input(type="text", id="inputUsername", placeholder="Username", value="#{account.username}")
    .control-group
      label.control-label(for="inputEmail") Email
      .controls
        input(type="text", id="inputEmail", placeholder="Email", value="#{account.email}")
    hr
    .control-group
      .controls
        button.btn(type="submit") Save Changes
